<article class="l-col6 realizacje__lista__post">
	<div>
		<a href="{{post.link}}">

			{% include 'components/generic/image-widthheight.twig' with {img_src: post.thumbnail, width: 808, height:480} %}
		</a>
	</div>
	<div class="l-row6">
		<div class="l-col5">
			<div class="realizacje__lista__posts__inside">
				<div>
					{% for item in post.terms('kategorie_realizacji') %}
						<a href="{{ site.link }}/kategorie_realizacji/{{ item.slug }}" class="realizacje__lista__posts__inside__cat noBreak font16">{{item.name}}</a>
					{% endfor %}

					<a href="{{post.link}}" class="realizacje__lista__posts__inside__title font2424 block">{{ post.title }}</a>
				</div>
				<a href="{{post.link}}" class="btn">zobacz</a>

			</div>
			<div class="realizacje__lista__posts__tags">
				<div class="singleRealizacje__tagi">
					{% for item in post.terms('tagi_realizacji') %}
						<a href="{{ site.link }}/tagi_realizacji/{{item.slug}}" class="font12 noBreak">#{{item.name}}</a>
					{% endfor %}


				</div>
			</div>
		</div>
	</div>

</article>
