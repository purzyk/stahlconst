{% extends "base.twig" %}

{% block content %}

	{% include 'components/skontaktuj.twig' with {class: 'white'} %}
	<section class="kontakt__tresc">
		<div class="l-container">
			<div class="l-row" data-aos="fade-up">
				<div class="l-col12 kontakt__tresc__title">
					<p class="font38">{{post.tytul}}</p>
				</div>

				<div class="l-col5">
					<p class="font16 kontakt__tresc__smaller">{{ post.dane_kontaktowe }}</p>
					<div class="kontakt__tresc__kolumna kontakt__tresc__lewa">
						<p class="font24">{{ post.meta('dane_kontaktowe_lewa_kolumna') }}</p>
						<p class="font24">{{ post.meta('dane_kontaktowe_prawa_kolumna') }}</p>
					</div>
				</div>
				<div class="l-col6 l-off7">
					<p class="font16 kontakt__tresc__smaller">{{ post.dane_rejestrowe }}</p>
					<div class="kontakt__tresc__kolumna prawa">
						<p class="font24">{{ post.meta('dane_rejestrowe_tresc') }}</p>
					</div>
				</div>

			</div>
		</div>
	</section>
	<section class="kontakt__zdjecia">

		<div class="kontakt__zdjecia__row" data-aos="fade-up">

			<div class="kontakt__zdjecia__mapa">
				{% filter shortcodes|raw %}
					{{post.map_shortcode}}
				{% endfilter %}
			</div>
			<div class="kontakt__zdjecia__zdjecie">
				{% include 'components/generic/image-widthheight.twig' with {img_src: post.zdjecie, width: 960, height:800} %}
			</div>

		</div>

	</section>
	<!-- /content-wrapper -->
{% endblock %}
